    <script>
        function navigateToMovie() {
            var selectedMovie = document.getElementById("movie").value;
            if (selectedMovie === "Hindi movies") {
                window.location.href = "#hindi-movies";
            } else if (selectedMovie === "Chinese movies") {
                window.location.href = "#chinese-movies";
            } else if (selectedMovie === "Korean") {
                window.location.href = "#korean-movies";
            } else {
            }
        }
    </script>
    
